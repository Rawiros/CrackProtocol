{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "disableSizeLimit": true,
    "typeRoots": [
      "./src/types",
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
}