{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
}